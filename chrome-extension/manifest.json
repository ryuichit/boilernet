{
    "manifest_version": 3,
    "name": "BoilerNET Demo",
    "version": "0.0.1",
    "description": "Extract the content from web pages.",
    "author": "Jurek Leonhardt",
    "action": {
        "default_popup": "popup.html",
        "default_title": "BoilerNet"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"],
            "all_frames": true,
            "run_at": "document_start"
        }
    ]
}
